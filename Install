(welcome)
(set parent_dir (askdir
  (prompt "Where do you want to have SRec installed?\n"
          "A drawer called SRec will be created there.")
  (help "A new directory will be created to hold all files "
        "belonging to SRec.")
  (default @default-dest)
  (disk)
))
(set srec_dir (tackon parent_dir "SRec"))
(makedir srec_dir)
(copyfiles
  (prompt "Copying drawer icon")
  (help @copyfiles-help)
  (source "icons/SRec_drawer.info")
  (dest parent_dir)
  (newname "SRec.info")
)
(set @default-dest (expandpath srec_dir))
(copyfiles
  (prompt "Copying executable file")
  (help @copyfiles-help)
  (source "SRec")
  (infos)
  (dest srec_dir)
)
(copyfiles
  (prompt "Copying text files")
  (help @copyfiles-help)
  (source "")
  (pattern "(srec.readme|releasenotes|COPYING)")
  (infos)
  (dest srec_dir)
)
(set catalogs_dir (tackon srec_dir "catalogs"))
(copyfiles
  (prompt "Copying locale catalogs")
  (help @copyfiles-help)
  (source "catalogs")
  (pattern "~(#?.#?)")
  (dest catalogs_dir)
  (confirm)
)
(exit)
